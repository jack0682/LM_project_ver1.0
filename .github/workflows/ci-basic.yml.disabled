name: CI Basic

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main, develop ]

jobs:
  basic-check:
    name: Basic Check
    runs-on: ubuntu-22.04
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Verify repository structure
        run: |
          echo "âœ… Repository checked out successfully"
          echo "ğŸ“ Repository structure:"
          ls -la
          echo ""
          echo "ğŸ“¦ ROS 2 package structure:"
          ls -la lm_temp_package/
          echo ""
          echo "âœ… Basic validation passed"
      
      - name: Check Python files
        run: |
          echo "ğŸ Python files found:"
          find . -name "*.py" -type f | head -20
          echo "âœ… Python files detected"

  lint:
    name: Python Lint
    runs-on: ubuntu-22.04
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.10'
      
      - name: Install flake8
        run: |
          python -m pip install --upgrade pip
          pip install flake8
      
      - name: Run flake8 (critical errors only)
        run: |
          # E9: ëŸ°íƒ€ì„ ì—ëŸ¬ (ë¬¸ë²• ì˜¤ë¥˜ ë“±)
          # F63: ë¹„êµ ì—°ì‚° ì˜¤ë¥˜
          # F7: ë¬¸ë²• ì˜¤ë¥˜
          # F82: undefined name
          flake8 lm_temp_package --count --select=E9,F63,F7,F82 --show-source --statistics
      
      - name: Run flake8 (style warnings)
        run: |
